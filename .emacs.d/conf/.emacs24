;;ビープ音消去
(setq ring-bell-function 'ignore)


;;起動時にEshellでシェルのカレントディレクトリに移動
(defun eshell-in-the-directory (targetdir)
  (interactive)
  (let ((dir default-directory))
    (eshell)
    (cd targetdir)
    (eshell-interactive-print (concat "cd " targetdir "\n"))
    (eshell-emit-prompt)
    (cd dir)
    (end-of-buffer)
    )
  )

